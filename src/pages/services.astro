---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.jsx';
import Services from '../components/Services.astro';
---

<Layout title="CXperts - Our Services">
  <Navigation client:load />
  <main class="pt-16">
    <div class="py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl md:text-5xl font-bold text-center text-white mb-8">
          Our Services
        </h1>
        <p class="text-xl text-gray-300 text-center max-w-3xl mx-auto">
          Comprehensive customer experience solutions tailored to your business needs
        </p>
      </div>
    </div>
    <Services />
  </main>
</Layout>
