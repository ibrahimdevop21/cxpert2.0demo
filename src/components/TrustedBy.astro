---
const logos = [
  { src: '/cx-logos/Redington_Logo.jpg', alt: 'Redington' },
  { src: '/cx-logos/Orascom.png', alt: 'Orascom' },
  { src: '/cx-logos/Hawana.png', alt: 'Hawana' },
  { src: '/cx-logos/muriya.jpg', alt: 'Muriya' },
  { src: '/cx-logos/jebel-safeh.jpg', alt: 'Jebel Safeh' },
  { src: '/cx-logos/VOSKER_Logo.png', alt: 'Vosker' },
  { src: '/cx-logos/big-black-lemon.png', alt: 'Lemon' },
  { src: '/cx-logos/spiro.png', alt: 'Spiro' },
  { src: '/cx-logos/spypoint.png', alt: 'Spypoint' }
];
---

<section class="py-12 px-4 md:px-8 bg-white/5 backdrop-blur-lg">
  <div class="max-w-7xl mx-auto">
    <h2 class="text-2xl md:text-3xl font-bold text-center mb-12 bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-pink-600">
      Trusted by Industry Leaders
    </h2>
    
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8 items-center justify-items-center">
      {logos.map((logo) => (
        <div class="w-full max-w-[180px] h-[80px] relative group">
          <div class="absolute inset-0 bg-white/5 rounded-lg transform group-hover:scale-105 transition-all duration-300"></div>
          <img
            src={logo.src}
            alt={logo.alt}
            class="w-full h-full object-contain p-4 relative z-10 transition-all duration-300 group-hover:opacity-100"
          />
        </div>
      ))}
    </div>
  </div>
</section>
