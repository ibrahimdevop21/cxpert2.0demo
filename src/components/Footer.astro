---
const currentYear = new Date().getFullYear();

const quickLinks = {
  company: [
    { name: "About Us", href: "/about" },
    { name: "Services", href: "/services" },
    { name: "Careers", href: "/careers" },
    { name: "Blog", href: "/blog" },
    { name: "Contact", href: "/contact" }
  ],
  services: [
    { name: "Customer Support", href: "/services#customer-support" },
    { name: "Technical Support", href: "/services#technical-support" },
    { name: "Back Office Operations", href: "/services#back-office" },
    { name: "AI Solutions", href: "/services#ai-solutions" },
    { name: "Quality Assurance", href: "/services#quality-assurance" }
  ],
  legal: [
    { name: "Privacy Policy", href: "/about#privacy" },
    { name: "Terms of Service", href: "/about#terms" },
    { name: "Cookie Policy", href: "/about#cookies" }
  ]
};

const socialLinks = [
  { name: "LinkedIn", href: "#", icon: "linkedin" }
];
---

<footer class="pt-12 mt-20 relative">
  <div class="absolute inset-0 bg-gradient-to-b from-transparent via-blue-900/10 to-transparent"></div>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
    <!-- Top section with logo and social links -->
    <div class="flex flex-col md:flex-row justify-between items-center mb-12">
      <div class="mb-8 md:mb-0">
        <a href="/" class="text-2xl font-bold bg-gradient-to-r from-blue-400 to-yellow-400 text-transparent bg-clip-text">CXperts</a>
      </div>
      <div class="flex space-x-6">
        {socialLinks.map((link) => (
          <a
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            class="text-blue-200/80 hover:text-yellow-400 transition-colors duration-300"
          >
            {link.icon === 'linkedin' && (
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            )}
          </a>
        ))}
      </div>
    </div>

    <!-- Main footer content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 pb-12">
      <!-- Company Info -->
      <div>
        <h3 class="text-lg font-semibold bg-gradient-to-r from-blue-400 to-yellow-400 text-transparent bg-clip-text mb-4">About CXperts</h3>
        <p class="text-blue-200/80 mb-4">
          Leading provider of innovative customer experience solutions, empowering businesses to deliver exceptional service.
        </p>
        <div class="space-y-2">
          <p class="text-blue-200/80 flex items-center group">
            <svg class="h-5 w-5 mr-2 text-blue-400 group-hover:text-yellow-400 transition-colors" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
            </svg>
            <a href="mailto:contact@cxperts.com" class="hover:text-yellow-400 transition-colors">
              contact@cxperts.com
            </a>
          </p>
          <p class="text-blue-200/80 flex items-center group">
            <svg class="h-5 w-5 mr-2 text-blue-400 group-hover:text-yellow-400 transition-colors" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
            </svg>
            <a href="tel:+20123456789" class="hover:text-yellow-400 transition-colors">
              +20 123 456 789
            </a>
          </p>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-semibold bg-gradient-to-r from-blue-400 to-yellow-400 text-transparent bg-clip-text mb-4">Quick Links</h3>
        <ul class="space-y-2">
          {quickLinks.company.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-blue-200/80 hover:text-yellow-400 transition-colors duration-300"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-lg font-semibold bg-gradient-to-r from-blue-400 to-yellow-400 text-transparent bg-clip-text mb-4">Our Services</h3>
        <ul class="space-y-2">
          {quickLinks.services.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-blue-200/80 hover:text-yellow-400 transition-colors duration-300"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal -->
      <div>
        <h3 class="text-lg font-semibold bg-gradient-to-r from-blue-400 to-yellow-400 text-transparent bg-clip-text mb-4">Legal</h3>
        <ul class="space-y-2">
          {quickLinks.legal.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-blue-200/80 hover:text-yellow-400 transition-colors duration-300"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="border-t border-blue-400/20 py-8">
      <div class="text-center text-blue-200/60">
        <p>&copy; {currentYear} CXperts. All rights reserved.</p>
      </div>
    </div>
  </div>
</footer>
