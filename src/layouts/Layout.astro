---
import AnimatedBackground from '../components/ui/AnimatedBackground';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="CXperts - Customer Experience Solutions">
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css">
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style is:global>
      :root {
        --blue-950: #020617;
        --blue-900: #1e3a8a;
        --blue-800: #1e40af;
        --blue-400: #60a5fa;
        --yellow-400: #facc15;
        --yellow-300: #fde047;
      }

      html {
        background: var(--blue-950);
        scroll-behavior: smooth;
      }
      
      body {
        margin: 0;
        padding: 0;
        min-height: 100vh;
        color: rgba(186, 230, 253, 0.8); /* text-blue-200/80 */
        font-family: 'Work Sans', sans-serif;
      }

      ::selection {
        background: rgba(96, 165, 250, 0.2); /* blue-400/20 */
        color: rgba(186, 230, 253, 1); /* text-blue-200 */
      }

      /* Scrollbar Styles */
      ::-webkit-scrollbar {
        width: 10px;
      }

      ::-webkit-scrollbar-track {
        background: var(--blue-950);
      }

      ::-webkit-scrollbar-thumb {
        background: linear-gradient(to bottom, var(--blue-400), var(--yellow-400));
        border-radius: 5px;
      }

      ::-webkit-scrollbar-thumb:hover {
        background: linear-gradient(to bottom, var(--blue-400), var(--yellow-300));
      }

      /* Global Focus Styles */
      *:focus-visible {
        outline: 2px solid var(--blue-400);
        outline-offset: 2px;
      }

      /* Global Link Styles */
      a {
        color: var(--blue-400);
        transition: color 0.2s ease;
      }

      a:hover {
        color: var(--yellow-400);
      }

      #root {
        position: relative;
        z-index: 1;
      }

      .content-wrapper {
        position: relative;
        z-index: 1;
      }

      /* Gradient Text Utility */
      .gradient-text {
        background: linear-gradient(to right, var(--blue-400), var(--yellow-400));
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
      }
    </style>
  </head>
  <body>
    <AnimatedBackground client:load />
    <div id="root">
      <div class="content-wrapper">
        <slot />
      </div>
      <Footer />
    </div>
  </body>
</html>
